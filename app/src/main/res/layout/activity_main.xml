<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/monte_fuji"
        android:layout_weight="0.7"
        android:visibility="invisible">

    </ImageView>
    <Button
        android:id="@+id/boton_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Start"
        android:background="@color/colorAccent">

    </Button>
    <TextView
        android:id="@+id/pregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:visibility="invisible"/>

    <RelativeLayout
        android:id="@+id/layout_botones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="invisible">

        <Button
            android:id="@+id/boton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12sp"
            android:text="A"
            android:background="@color/blue">

        </Button>

        <Button
            android:id="@+id/boton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/boton1"
            android:layout_margin="12sp"
            android:text="B"
            android:background="@color/red">

        </Button>

        <Button
            android:id="@+id/boton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/boton1"
            android:layout_margin="12sp"
            android:text="C"
            android:background="@color/yellow">

        </Button>

        <Button
            android:id="@+id/boton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/boton2"
            android:layout_toRightOf="@id/boton3"
            android:layout_margin="12sp"
            android:text="D"
            android:background="@color/green"
            android:layout_toEndOf="@id/boton3">
        </Button>


    </RelativeLayout>

    <Button
        android:id="@+id/boton_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0sp"
        android:text="Hint"
        android:visibility="invisible">

    </Button>

</LinearLayout>